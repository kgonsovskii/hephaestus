@model List<model.BuxModel>

<div class="row">
    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="col-md-4">
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="Bux[@i].Id" value="@Model[i].Id" readonly="readonly" class="form-control" />
                <span asp-validation-for="Bux[@i].Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>ApiUrl</label>
                <input type="text" name="Bux[@i].ApiUrl" value="@Model[i].ApiUrl" class="form-control" />
                <span asp-validation-for="Bux[@i].ApiUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>ApiKey</label>
                <input type="text" name="Bux[@i].ApiKey" value="@Model[i].ApiKey" class="form-control" />
                <span asp-validation-for="Bux[@i].ApiKey" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>
                    <input type="checkbox" name="Bux[@i].Enabled" value="true" @(Model[i].Enabled ? "checked" : "") /> Enabled
                </label>
                <span asp-validation-for="Bux[@i].Enabled" class="text-danger"></span>
            </div>
        </div>
    }
</div>